<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="log-path">./logs/</Property>
    </Properties>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] - %C{1} - [%-5level] - %msg%n"/>
            <Filters>
                <ThresholdFilter level="WARN" onMatch="DENY"
                                 onMismatch="ACCEPT"/>
            </Filters>
        </Console>
        <Console name="STDERR" target="SYSTEM_ERR">
            <PatternLayout
                    pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] - %C{1} - [%-5level] - %msg%n"/>
            <Filters>
                <ThresholdFilter level="WARN" onMatch="ACCEPT"/>
            </Filters>
        </Console>
        <RollingFile name="logfile" fileName="${log-path}/licensemanager.log"
                     filePattern="${log-path}/licensemanager-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout>
                <pattern>%d{yyyy-MM-dd HH:mm:ss:SSS} [%t] - %-5p - %C{1} - %m%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="4"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <logger name="org.apache" level="OFF"/>
        <logger name="de.shadowsoft" level="DEBUG">
            <AppenderRef ref="STDOUT" level="DEBUG"/>
            <AppenderRef ref="STDERR" level="WARN"/>
            <AppenderRef ref="logfile" level="INFO"/>
        </logger>
        <Root level="OFF"/>
    </Loggers>
</Configuration>